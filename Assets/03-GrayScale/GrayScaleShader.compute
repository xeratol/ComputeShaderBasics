#pragma kernel GrayScale

RWTexture2D<float4> Dest;

[numthreads(8,8,1)]
void GrayScale(uint3 id : SV_DispatchThreadID)
{
    float luminance = 0.2126 * Dest[id.xy].r +
        0.7152 * Dest[id.xy].g +
        0.0722 * Dest[id.xy].b;
    Dest[id.xy] = float4(luminance, luminance, luminance, Dest[id.xy].a);
}
